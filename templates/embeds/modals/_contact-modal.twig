{# Overlay container #}
    <div
      x-show="contactModal"
      class="z-20 fixed inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true"
    >
      <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:p-0">

        <div 
          @click="contactModal = false"
          class="fixed inset-0 transition-opacity" aria-hidden="true"
        >
        </div>

        <!-- This element is to trick the browser into centering the modal contents. -->
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
        
        {# Enquiry modal container #}
        <div class="relative z-10 inline-block self-center rounded-lg text-left overflow-hidden shadow-xl align-middle sm:max-w-xl md:max-w-3xl lg:max-w-4xl xl:max-w-5xl w-full">
          
          {# Close button #}
          <div 
            @click="contactModal = false"
            class="block absolute top-0 right-0 pt-4 pr-4"
          >
            <button type="button" class="rounded-md p-2 inline-flex items-center justify-center hover:text-slt-blue">
              <span class="sr-only">Close</span>

              <!-- Heroicon name: outline/x -->
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>

            </button>
          </div>
          {# End | Close button #}

          <div class="grid md:grid-cols-12">
          
            {# Illustration container #}
            <div class=" hidden md:flex items-center justify-center md:col-span-4">

              <img src="/images/illu-discovery-call.svg" class="h-full w-auto p-4" alt="">
                
            </div>
            {# End | Illustration container #}   
            
            {# Inputs container #}
            <div class="py-4 px-12 my-6 text-center md:col-span-8">

              {# Heading #}
              <div class="mt-8 font-nunito font-semibold text-left text-2xl md:text-3xl">Connect with us</div>

              {# Enquiry form #}
              <div class="pt-10 mx-auto">
                  
                {{ craft.freeform.form("contactForm").render() }}

              </div>
                
            </div>
            {# End | Inputs container #}  

          </div>

        </div>
        {# End | Enquiry modal container #}

      </div>

    </div>
    {# End | Overlay container #}