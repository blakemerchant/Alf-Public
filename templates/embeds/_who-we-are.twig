{# Anchor Tag #}
<a id="who-we-are"></a>

{# Who We Are Band #}
<div>

  {# Wrapper #}
  <div>
    {# Bringing in the Who We Are entry from the Craft admin section #}
    {% set whoWeAre = craft.entries.section('whoWeAreBand').one() %}

    {# Setting the desktop styling for the band #}
    {% set whoWeAreStyling = whoWeAre.styling.one() %}
    <img src="{{ whoWeAreStyling.url }}"
      alt="{{ whoWeAreStyling.alt }}"
      class="invisible h-0 lg:visible lg:h-fit absolute mt-24" />

    {# Setting the mobile styling for the band #}
    {% set whoWeAreStylingMobile = whoWeAre.mobileStyling.one() %}
    <img src="{{ whoWeAreStylingMobile.url }}"
      alt="{{ whoWeAreStylingMobile.alt }}"
      class="visible h-auto lg:invisible lg:h-0 absolute" />

    {# Outer container #}
    <div class="mx-10 lg:pt-24 my-5">

      {# Inner container #}
      <div class="max-w-6xl mx-auto">

        {# Content Grid #}
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">

          {# Setting the content image  #}
          {% set lockAndKey = whoWeAre.image.one() %}

          {# Displaying the content image #}
          <div class="mt-16 w-full lg:translate-y-8 sm:mt-26 flex justify-center sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center lg:justify-center z-10 px-10 pb-10">
            <img src="{{ lockAndKey.url }}" alt="{{ lockAndKey.alt }}" />
          </div>

          {# Floor Styling - Mobile #}
          <div class="lg:h-0 lg:invisible bg-alf-blue md:row-start-2 col-start-1 col-span-12 h-14 -translate-y-20 rounded-3xl relative -z-10"></div>

          {# Text Content #}
          <div class="text-left sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">

            {# Title #}
            <h1 class="block  font-rubik font-semibold text-3xl uppercase py-3">
              {{ whoWeAre.titleText }}
            </h1>
  
            {# Text #}
            <p class="font-light font-rubik text-left sm:text-center lg:text-left sm:mt-5 lg:block lg:pb-0 xl:text-lg">
              {{ whoWeAre.subtitleText|nl2br }}
            </p>

            {# Text #}
            <p class="font-light font-rubik text-left sm:text-center lg:text-left sm:mt-5 lg:block lg:pb-0 xl:text-lg">
              {{ whoWeAre.secondaryHeading }}
            </p>
            
          </div>
          {# End | Text Content #}

          {# Floor Styling - Desktop #}
          <div class="invisible lg:h-24 lg:visible bg-alf-blue md:row-start-2 col-start-1 col-span-12 h-24 -translate-y-16 rounded-3xl "></div>

        </div>
        {# End | Content Grid #}

      </div>
      {# End | Inner container #}

    </div>
    {# End | Outer container #}

  </div>
  {# End | Wrapper #}

</div>
{# End | Who We Are Band #}
