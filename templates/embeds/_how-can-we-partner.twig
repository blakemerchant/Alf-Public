{# How Can We Partner Band #}
{% set partnerInfo = craft.entries.section('howCanWePartner').one() %}
{# Heading #}
<p class="mx-auto mt-5 max-w-prose font-rubik tracking-tight text-4xl text-center pt-24">
  {{ partnerInfo.howCanWePartnerTitle }}
</p>
<p class="mx-auto mt-5 max-w-prose text-xl font-rubik uppercase text-center">
  {{ partnerInfo.howCanWePartnerSubtitle }}
</p>
{# End | Heading #}

{# Section 1 - Sponsorship #}
<section class="mx-10">
  <div class="my-10 lg:mx-auto max-w-5xl z-10 px-4 sm:px-6 lg:px-8 md:bg-alf-nav-blue pt-5 md:bg-opacity-10 rounded-3xl">
    {# Programme Grid #}
    <div class="grid grid-cols-1 md:gap-y-10 gap-y-4 lg:grid-cols-3 lg:gap-y-0 lg:gap-x-4 xl:translate-x-24">
      {# Heading #}
      {% set numberOne = partnerInfo.numberOne.one() %}
      <div class="flex flex-col pt-10 pb-5">
        <div>
          <hr class="bg-alf-dark-blue h-0.5 border-0" />
        </div>
        <div class="flex flex-row my-10 mx-2 items-start">
          <div class="flex-shrink">
            <img src="{{ numberOne.url }}" />
          </div>
          <div class="flex-1 px-5 text-2xl font-rubik">
            <h1>
              {{ partnerInfo.stepOneHeading }}
            </h1>
          </div>
        </div>
        <div>
          <hr class="bg-alf-dark-blue h-0.5 border-0" />
        </div>
      </div>
      {# End | Heading #}

      {% set programmes = partnerInfo.programmeList.all() %}
      {# Items #}
      {% for program in programmes %}
        <div class="flex flex-col bg-alf-white rounded-2xl shadow-xl lg:my-10 my-5 mx-2">
          <div class="flex-1 relative pt-16 px-6 pb-8 md:px-8">
            <div class="absolute top-0 p-5 inline-block bg-alf-dark-blue rounded-xl shadow-lg transform -translate-y-1/2">
              {% set image = program.programmeImage.one() %}
              <img class="h-6 w-6 text-white" src="{{ image.url }}" />
            </div>
            <h3 class="text-xl font-medium font-rubik">
              {{ program.programName }}
            </h3>
            <p class="mt-4 text-base font-rubik">
              {{ program.programPrice }}
            </p>
          </div>
          <div class="p-6 bg-alf-blue rounded-bl-2xl rounded-br-2xl md:px-8">
            <a href="#contact"  @click="contactModal = true" class="text-base font-medium font-rubik">
              Contact us<span aria-hidden="true">&rarr;</span>
            </a>
          </div>
        </div>
      {% endfor %}

      {# End | Items #}
    </div>
    {# End | Programme Grid #}
  </div>
</section>
{# End | Section 1 - Sponsorship #}

{# Section 2 - Tertiary Scholarship #}
<section class="ml-10 lg:mx-10">
  <div class="my-20 max-w-6xl lg:mx-auto z-10 px-4 sm:px-6 lg:px-8 bg-alf-white rounded-l-3xl rounded-r-none lg:rounded-r-3xl">
    {# Programme Grid #}
    <div class="grid grid-cols-1 lg:grid-cols-3 lg:grid-rows-2 lg:gap-x-4 xl:-translate-x-24">
      <div class="invisible h-0 lg:h-auto lg:visible col-span-1 row-span-2">
        {% set jump = partnerInfo.howCanWePartnerImage.one() %}
        <img src="{{ jump.url }}" />
      </div>

      {# Heading #}
      {% set numberTwo = partnerInfo.numberTwo.one() %}
      <div class="flex flex-col py-20 col-span-1 lg:col-span-2">
        <div>
          <hr class="bg-alf-dark-blue h-0.5 border-0" />
        </div>
        <div class="flex flex-row my-10 mx-2 items-start">
          <div class="flex flex-col">
            <div class="flex-grow">
              <img src="{{ numberTwo.url }}" />
            </div>
            <div class="flex-shrink lg:hidden lg:h-0 -translate-x-8">
              <img src="{{ jump.url  }}" class="max-h-56" />
            </div>
          </div>

          <div class="flex-1 px-5 text-2xl font-rubik">
            <h1>
              {{ partnerInfo.stepTwoHeading }}
            </h1>
          </div>
        </div>
        <div>
          <hr class="bg-alf-dark-blue h-0.5 border-0" />
        </div>
      </div>
      {# End | Heading #}

      {% set questions = partnerInfo.ctaList.all() %}
      {% for question in questions %}
        <div class="flex flex-col bg-alf-white rounded-2xl shadow-xl my-10 mx-2">
          <div class="flex-1 relative pt-16 px-6 pb-8 md:px-8">
            <div class="absolute top-0 p-5 inline-block bg-alf-dark-blue rounded-xl shadow-lg transform -translate-y-1/2">
            {% set image = question.questionImage.one() %}
              <img class="h-6 w-6 text-white" src="{{ image.url }}">
                <path stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <p class="mt-4 text-base font-rubik">
              {{ question.question }}
            </p>
          </div>
          <div class="p-6 bg-alf-blue rounded-bl-2xl rounded-br-2xl md:px-8">
            <a href="#" class="text-base font-medium font-rubik">
              Contact us<span aria-hidden="true">&rarr;</span>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  {# End | Programme Grid #}
</section>
{# End | Section 2 - Tertiary Scholarship #}

{# Section 3 - Information #}
<section class="px-10">
  <div class="my-10 max-w-6xl lg:mx-auto z-10 px-4 sm:px-6 lg:px-8 bg-alf-nav-blue pt-5 bg-opacity-10 rounded-3xl">
    {# Content Grid #}
    <div class="grid grid-cols-1 gap-y-10 lg:grid-cols-12 items-center align-middle pb-5">
      <div class="col-span-8 font-rubik text-2xl font-thin px-3 text-left">
        <p>
          {{ partnerInfo.fundersContent }}
        </p>
        <br />
        <p>
          {{ partnerInfo.furtherDiscount }}
        </p>
      </div>
      {% set percentage = partnerInfo.fundersImage.one() %}
      <div class="col-span-4 row-start-1 lg:col-start-9 mx-auto">
        <img src="{{ percentage.url }}" />
      </div>
    </div>

    <div class="font-rubik text-2xl font-semibold text-center">
      <hr class="bg-alf-dark-blue h-0.5 border-0" />
      <p class="py-5">
        {{ partnerInfo.getInvolvedContent }}
      </p>
    </div>
  </div>
  {# End | Content Grid #}
</section>
{# End | Section 3 - Information #}
<br />
{# End | How Can We Partner Band #}
