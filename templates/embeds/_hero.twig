{# Hero Band #}
{# Outer container #}
<div class="my-10 ml-10 xl:mr-10">
  {# Inner container #}
  <div class="relative max-w-7xl rounded-l-3xl xl:rounded-r-3xl mx-auto px-6 sm:px-8 md:px-12 lg:px-16 sm:py-32 bg-alf-blue">

    {% set heroStyling = '/images/HeroStyling.png' %}
    <img src="{{ heroStyling }}" alt="Hero Styling" class="invisible h-0 lg:visible lg:h-fit absolute right-0 top-8 " />

    <div class="lg:grid lg:grid-cols-7 lg:gap-10">
   
      <div class="text-left sm:text-center md:max-w-2xl md:mx-auto lg:col-span-3 lg:text-left lg:pl-8 lg:py-18">
        {# Hero Title #}
        <h1 class="block font-rubik text-4xl">
          Hero title lorem ipsum dolor sit amet, consectetur adipis
        </h1>

        {# Hero Subtitle #}
        <p class="hidden font-light font-rubik mt-8 sm:py-6 text-left sm:text-center sm:text-xl lg:text-left sm:mt-5 lg:block lg:pb-0 lg:text-lg">
          Providing under-resourced learners and educators in Africa with access
          to high-quality digital education in S.T.E.M.
        </p>

        {# Button #}
        <a href=""
          class="hidden mt-8 px-6 py-3 font-rubik text-base font-bold rounded-md bg-alf-nav-blue text-alf-white shadow hover:underline w-full md:w-fit md:px-16 lg:block">
          Go to advantagelearn.com
        </a>
      </div>

      {# Hero Image #}
      {% set heroImage = '/images/HeroImage.svg' %}
      <div class="mt-16 sm:mt-26 flex justify-center sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-3 lg:flex lg:items-center lg:justify-center">
        <img src="{{ heroImage }}" alt="Hero Image" />
      </div>
      {# End | Hero Image #}

      {# Subtitle and Button for mobile and tablet #}
      <div class="flex flex-col items-center lg:hidden">
        {# Subtitle #}
        <p class="py-4 max-w-2xl text-left sm:text-center lg:text-left sm:mt-5 sm:text-xl mt-8 lg:pb-0 lg:text-lg xl:text-xl">
          Providing under-resourced learners and educators in Africa with access
          to high-quality digital education in S.T.E.M.
        </p>

        {# Button #}
        <a href=""
          class="mx-auto w-full max-w-md mt-8 px-6 py-3 text-base font-bold rounded-md bg-alf-nav-blue text-alf-white text-center shadow hover:underline">
          Go to advantagelearn.com
        </a>
      </div>
      {# End | Subtitle and Button for mobile and tablet #}
    </div>
  </div>
  {# End | Inner container #}
</div>
{# End | Outer container #}
{# End | Hero Band #}
